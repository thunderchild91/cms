						textarea(name='music', placeholder='Tell us your favorite music...' rows=4, required=true).form-control= formData.music
					//- My favorite diapers
					.form-group()
						label Favorite Diapers
						textarea(name='diapers', placeholder='Tell us your favorite diapers...' rows=4, required=true).form-control= formData.diapers
					//- My favorite stuffies
					.form-group()
						label Favorite Stuffies
						textarea(name='stuffies', placeholder='Tell us your favorite stuffies...' rows=4, required=true).form-control= formData.stuffies
					//- My favorite pacifiers
					.form-group()
						label Favorite Pacifiers
						textarea(name='pacifiers', placeholder='Tell us your favorite pacifiers...' rows=4, required=true).form-control= formData.pacifiers
					//- About me
