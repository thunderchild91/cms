extends ../layouts/default

block content
	.container-fluid.nopadding: .section.section-background-image
		img.siteBanner(src="/images/banner-incont.jpg", alt="Please Refresh")
	.container: .row: .col-sm-10.col-sm-offset-1.col-md-8.col-md-offset-2 
		article
			p.backButton: a(href='/members') &larr; back to the members
			hr
			if !data.post
				h2.sepratePostHeader Invalid User.
			else
				div.imageDiv
					if data.post.image !== undefined
						img.center(src="/uploads/files/" + data.post.image, alt="User Image", style="max-height: 300px; padding-bottom: 20px; border-radius: 0px !important")
					else
						img.center(src="/uploads/files/default-user-kenna-site.png", alt="User Image", style="height: 150px; width: auto; padding-bottom: 20px; border-radius: 0px !important")
				div.post
					if data.post.name
						.form-group()
							label Name:
							|	#{data.post.name.first} #{data.post.name.last}
					if data.post.ages
						.form-group()
							label Ages:
							|	#{data.post.ages}					
					if data.post.ageplayMonth && data.post.ageplayYear
						.form-group()
							label Ageplay:
							|	#{data.post.ageplayMonth} Month(s) #{data.post.ageplayYear} Year(s)
					if data.post.gender
						.form-group()
							label Gender:
							|	#{data.post.gender}					
					if data.post.sexorientation
						.form-group()
							label Sexual Orientation:
							|	#{data.post.sexorientation}	
					if data.post.yourType.length
						.form-group()
							label I am a:
							|	#{data.post.yourType}						
					if data.post.caregaver
						.form-group()
							label Caregiver Name:
							|	#{data.post.caregaver}	
					if data.post.Rstatus
						.form-group()
							label Relationship Status:
							|	#{data.post.Rstatus}	
					if data.post.timeZone
						.form-group()
							label Time Zone:
							|	#{data.post.timeZone}
					if data.post.hobbies
						.form-group()
							label Favorite Hobbies/Intrests:
							|	#{data.post.hobbies}
					if data.post.movies
						.form-group()
							label Favorite Movies:
							|	#{data.post.movies}
					if data.post.books
						.form-group()
							label Favorite Books:
							|	#{data.post.books}
					if data.post.music
						.form-group()
							label Favorite Music:
							|	#{data.post.music}
					if data.post.diapers
						.form-group()
							label Favorite Diapers:
							|	#{data.post.diapers}
					if data.post.stuffies
						.form-group()
							label Favorite Stuffies:
							|	#{data.post.stuffies}
					if data.post.pacifiers
						.form-group()
							label Favorite Pacifiers:
							|	#{data.post.Rstatus}
					if data.post.message
						.form-group()
							label About Me:
							|	#{data.post.message}
